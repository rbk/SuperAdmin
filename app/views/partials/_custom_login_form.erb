<div id="login">
	<%= form_for(:user, :url => session_path(:user)) do |f| %>
		<div class="field">
			<%= f.text_field :email, :placeholder => 'Username' %>
			<%= f.password_field :password, :placeholder => '********' %>
		</div>
		<div class="field">	
			<%= f.check_box :remember_me %>
			<%= f.label :remember_me %>
		</div>
		<div class="field">
			<%= f.submit 'Sign in' %>
		</div>
		<%= link_to "Forgot your password?", new_password_path(:user) %>
	<% end %>
</div>